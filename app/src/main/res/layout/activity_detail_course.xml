<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailCourse"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_back" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        tools:src="@drawable/java"/>

    <TextView
        android:id="@+id/tv_nameCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futuraheavy"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        tools:text="JAVA"
        android:textSize="25sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_namePengajar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic"
        tools:text="Pengajar : Arifin"
        android:textSize="15sp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/img_modul"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/modul"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/tv_modul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_modul"
            android:layout_toRightOf="@+id/img_modul"
            tools:text="40 modul"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/biaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            tools:text="FREE"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/img_jam"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/clock"
            android:layout_toLeftOf="@+id/tv_jam"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            tools:text="40 jam" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_daftar"
            android:layout_below="@id/biaya"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    tools:text="Bahasa Java merupakan sebuah bahasa pemrograman yang legendaris. Hampir semua mahasiswa IT pernah belajar dan membuat program menggunakan bahasa Java. Jika di kampus terdapat mata kuliah pemrograman berbasis object (PBO), atau dalam bahasa inggris disebut sebagai object oriented programming (OOP), kemungkinan besar yang akan dipakai sebagai bahan praktek adalah bahasa Java." />

            </LinearLayout>


        </ScrollView>

        <Button
            android:id="@+id/btn_daftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#4654A3"
            android:text="@string/btn_detail"
            android:textColor="#FFF" />
    </RelativeLayout>



</LinearLayout>