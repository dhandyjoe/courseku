<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.MainActivity"
    android:padding="10dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCourse"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_shadow"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_main"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                tools:src="@drawable/java" />

            <TextView
                android:id="@+id/tv_nameHero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futuraheavy"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_toEndOf="@id/iv_main"
                android:layout_toRightOf="@id/iv_main"
                tools:text="Hero name"/>

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_below="@id/tv_nameHero"
                android:layout_toEndOf="@id/iv_main"
                android:layout_toRightOf="@id/iv_main"
                tools:text="Rating : 4.5"/>

            <TextView
                android:id="@+id/tv_pengajar"
                android:fontFamily="@font/comic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:layout_below="@id/tv_rating"
                android:layout_toEndOf="@id/iv_main"
                android:layout_toRightOf="@id/iv_main"
                tools:text="Pengajar : Dhandy Joe"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>